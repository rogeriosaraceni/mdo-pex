---
import FooterLogin from './footerLogin.astro'
---

<section class="box-form slide-in-left">
    <img class="img-fluid logo-login-pex puff-in-center" src="/assets/images/logo-pex.png" alt="logo" />

    <div class="card card-login" data-login="card">
        <div class="card-body">
            <section class="d-flex flex-column align-items-center justify-content-between h-100">
                <div class="w-100 mb-1">
                    <div class="title-login">Login</div>

                    <form action="" method="post">
                        <label>
                            <input type="email" name="email" placeholder="e-mail" class="form-control">
                        </label>

                        <label>
                            <input type="password" name="senha" placeholder="senha" id="senha" class="form-control">
                            <span class="btn-showPass" date-bs-toggle="tooltip" data-bs-title="mostrar/esconder senha">
                                <i data-js="currentTogglePass" class="bi bi-lock"></i>
                            </span>
                        </label>

                        <a class="btn form-control btn-submit d-flex align-items-center justify-content-center" href="/principal/">Entrar</a>
                    </form>

                    <div class="d-flex justify-content-center my-4">
                        <a class="text-black-50" href="">
                            <small>Esqueceu a senha?</small>
                        </a>
                    </div>
                </div>

                <FooterLogin />
            </section>
        </div><!-- card-body -->
    </div><!-- card -->
</section><!-- box-right -->
