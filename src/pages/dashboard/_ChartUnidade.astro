---
import CardCardBody from '@componentsLayout/CardCardBody.astro'
---

<CardCardBody>
    <h5 class="title-chart">Resultado por Unidade</h5>
    <div class="box-chart boxUnidade" id="chartdiv-unidade"></div>
</CardCardBody>

<script is:inline>
    am4core.ready(function() {

        am4core.useTheme(am4themes_animated);

        var chart = am4core.create("chartdiv-unidade", am4charts.XYChart);

        // Disable amChart Logo
        if(chart.logo){
            chart.logo.disabled = true;
        }

        chart.padding(20, 0, 0, 0);

        // Add data
        chart.data = [
            {
                posicao: "100",
                unidade: "Unidade 1",
            },
            {
                posicao: "97",
                unidade: "Unidade 2",
            },
            {
                posicao: "95",
                unidade: "Unidade 3",
            },
            {
                posicao: "94",
                unidade: "Unidade 4",
            },
            {
                posicao: "92",
                unidade: "Unidade 5",
            },


            {
                posicao: "90",
                unidade: "Unidade 6",
            },
            {
                posicao: "89",
                unidade: "Unidade 7",
            },
            {
                posicao: "87",
                unidade: "Unidade 8",
            },
            {
                posicao: "85",
                unidade: "Unidade 9",
            },
            {
                posicao: "84",
                unidade: "Unidade 10",
            },
        ];

        // Create axes
        var categoryAxis = chart.xAxes.push(new am4charts.CategoryAxis());
        categoryAxis.dataFields.category = "unidade";
        categoryAxis.renderer.grid.template.location = 0;
        categoryAxis.renderer.minGridDistance = 10;
        categoryAxis.renderer.grid.template.disabled = true;
        categoryAxis.renderer.labels.template.horizontalCenter = "middle";
        categoryAxis.renderer.labels.template.verticalCenter = "middle";
        categoryAxis.renderer.labels.template.rotation = -45;
        categoryAxis.renderer.labels.template.fontSize = 11;

        var valueAxis = chart.yAxes.push(new am4charts.ValueAxis());
        valueAxis.renderer.grid.template.disabled = true;
        valueAxis.renderer.labels.template.disabled = true;

        // Create series
        var series = chart.series.push(new am4charts.ColumnSeries());
        series.dataFields.valueY = "posicao";
        series.dataFields.categoryX = "unidade";
        series.name = "Posicao";
        series.columns.template.tooltipText = "{categoryX}: [bold]{valueY}%[/]";
        series.columns.template.fillOpacity = .8;
        series.columns.template.strokeWidth = 0;

        series.columns.template.column.cornerRadiusTopLeft = 10;
        series.columns.template.column.cornerRadiusTopRight = 10;
        series.columns.template.column.fillOpacity = 0.8;

        var bullet = series.bullets.push(new am4charts.LabelBullet())
        bullet.interactionsEnabled = false
        bullet.dy = -5;
        bullet.fontSize = 11;
        bullet.label.text = '{valueY}%';
        bullet.label.fill = am4core.color('#000');

        // as by default columns of the same series are of the same color, we add adapter which takes colors from chart.colors color set
        series.columns.template.adapter.add("fill", function(fill, target){
            return chart.colors.getIndex(target.dataItem.index);
        });
    });
</script>
